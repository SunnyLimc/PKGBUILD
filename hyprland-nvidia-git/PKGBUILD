pkgname=hyprland-nvidia-git
pkgver=0.16.0.r1957.989deaf
pkgrel=1
license=('BSD')
pkgdesc='A dynamic tiling Wayland compositor based on wlroots-eglstream (git ver, with nvidia, hidpi patches)'
url='https://github.com/hyprwm/Hyprland'
provides=(hyprland-git "hyprland=${pkgver/.r*/}")
arch=(any)
depends=(
	libxcb
	xcb-proto
	xcb-util
	xcb-util-keysyms
	libxfixes
	libx11
	libxcomposite
	xorg-xinput
	libxrender
	pixman
	wayland-protocols
	cairo
	pango
	polkit
	glslang
	libinput
	libxcb
	libxkbcommon
	opengl-driver
	pixman
	wayland
	xcb-util-errors
	xcb-util-renderutil
	xcb-util-wm
	seatd
	vulkan-icd-loader
	vulkan-validation-layers
	xorg-xwayland
)
makedepends=(
	git
	cmake
	ninja
	gcc
	gdb
	meson
	vulkan-headers
	wayland-protocols
	xorgproto
)
source=(
	"${pkgname}::git+${url}.git"
	"wlroots::git+https://github.com/danvd/wlroots-eglstreams.git"
	"nvidia::git+https://aur.archlinux.org/hyprland-nvidia-git.git"
	"hidpi.patch::https://gitlab.freedesktop.org/lilydjwg/wlroots/-/commit/6c5ffcd1fee9e44780a6a8792f74ecfbe24a1ca7.diff"
)
sha256sums=(
	'SKIP'
	'SKIP'
	'SKIP'
	'403f2d4009a0d3c98191b1033e575c9c1c606904c67b5d217b4bae06d0f2ba2c'
)
pkgver() {
	cd "${pkgname}"
	set -o pipefail
	grep -zoP "project\([^)]*\)" meson.build | xargs --null echo | perl -ne '/\sversion\s:\s'"'"'([0-9.]*).*'"'"'/ and print $1'
	printf ".r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "${pkgname}"
	rm -rf subprojects/wlroots
	mv ../wlroots subprojects/
	git -C subprojects/wlroots revert -n 18595000f3a21502fd60bf213122859cc348f9af
	make fixwlr
	patch -N -p1 -d subprojects/wlroots < ../hidpi.patch
	patch -N -p0 -d subprojects/wlroots < ../nvidia/nvidia.patch
	cd subprojects/wlroots && meson build/ --prefix="${srcdir}/tmpwlr" --buildtype=release && ninja -C build/ && mkdir -p "${srcdir}/tmpwlr" && ninja -C build/ install && cd ../../
    make protocols
    make release
	cd ./hyprctl && make all && cd ..
}

package() {
    cd "${pkgname}"
	mkdir -p "${pkgdir}/usr/share/wayland-sessions"
	mkdir -p "${pkgdir}/usr/share/hyprland"
	install -Dm755 build/Hyprland -t "${pkgdir}/usr/bin"
	install -Dm755 hyprctl/hyprctl -t "${pkgdir}/usr/bin"
	install -Dm644 assets/*.png -t "${pkgdir}/usr/share/hyprland"
	install -Dm644 example/hyprland.desktop -t "${pkgdir}/usr/share/wayland-sessions"
	install -Dm644 example/hyprland.conf -t "${pkgdir}/usr/share/hyprland"
	install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname%-git}"
	install -Dm755 ../tmpwlr/lib/libwlroots.so.11032 -t "${pkgdir}/usr/lib"	meson install -C build --destdir "${pkgdir}"
}
