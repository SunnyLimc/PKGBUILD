pkgver() {
  printf "r%s" "$(git rev-list --count HEAD)"
}

package() {
  install -Dm644 *.service -t "${pkgdir}/usr/lib/systemd/system/"
  install -Dm755 "clash-tuner.sh" -T "${pkgdir}/usr/bin/clash-tuner"
}
